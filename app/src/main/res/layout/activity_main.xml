            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/etName"
            android:layout_weight="2" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/bConnect"
            android:layout_weight=".1" />
    </LinearLayout>

    <ListView
